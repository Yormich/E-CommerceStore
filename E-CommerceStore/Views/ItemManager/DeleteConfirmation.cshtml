@model Item


<div class="delete-userpage-form-wrapper">
    <form method="post" asp-action="Delete" asp-controller="ItemManager" asp-route-itemId="@Model.Id">
        <legend>
            Warning!
        </legend>
        If you delete this product, all orders related to this product will also be deleted.
        It is recommended to simply withdraw the item from sale
        <fieldset>
            <label asp-for="Name" class="form-label mt-4">Enter product name 
                <strong>(@(Model.Name))</strong> to proceed</label>
                       <input asp-for="Name" name="Name" type="text" class="form-control" 
                            placeholder="Product Name" value="@String.Empty">
            <span asp-validation-for="Name"></span>
            <input type="submit" class="btn btn-danger" 
            style="margin-top:1%;margin-bottom:2%;margin-right:3%;;float:right" value="Confirm" />
        </fieldset>
    </form>
</div>
 
