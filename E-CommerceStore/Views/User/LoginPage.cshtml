
@{
    string ReturnUrl = ViewBag.ReturnUrl ?? "/Products";
    string? Error = TempData["Error"] as string;
}


<div class="login-form-wrapper">
    <form action="/login?ReturnUrl=@ReturnUrl" method="post">
        <fieldset>
            <legend>Login</legend>
           @if(!String.IsNullOrEmpty(Error))
            {
                <div class="alert alert-dismissible alert-danger">
                    <h2><strong>Wrong Data!</strong></h2>
                    <h3>@Error</h3>
                </div>
            }
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
              <div class="form-group">
                <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
        </fieldset>
        
        <button type="submit" class="btn btn-dark" style="margin-top:1%;">Submit</button>
    
    </form>
    <a asp-action="Register" asp-controller="User" class="register-link">Don't have an account? Register.</a>
</div>


@section Footer{
     <div class="footer-basic">
                <div class="social">
                <a href="https://www.instagram.com/rodgerburns/"><img src="~/StaticImages/instagramRef.png" class="social-img"/></a>
                <a href="https://github.com/Yormich"><img src="~/StaticImages/gitHubRef.png" class="social-img"/></a>
                </div>
                <p class="copyright">E-Commerce Store © @DateTime.Now.Year</p>
    </div>
}